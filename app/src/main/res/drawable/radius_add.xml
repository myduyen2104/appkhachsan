<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <shadow
                android:color="#888888"
                android:radius="8dp" />
        </shape>
    </item>
    <!-- Main background layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2FB8F6" /> <!-- Màu nền của button -->
            <corners android:radius="250dp" /> <!-- Bán kính của góc bo tròn -->
            <stroke
                android:width="2dp"
                android:color="#2FB8F6" /> <!-- Màu viền của button -->
        </shape>
    </item>
</layer-list>
